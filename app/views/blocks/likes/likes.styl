.likes
    display flex
    justify-content space-between
    align-self flex-start
    align-items center
    font-size 100%
    width 15%

    &__count
        font-size 70%

    &__image
        width 40%
        height 40%
        cursor pointer

@media screen and (max-width: 768px)
    likes__count
        font-size 50%
        margin-left 1%

    likes__image
        width 30%
        height 30%
