.layout-body
    padding 0

.submit-button
    padding-bottom 1%
    padding-top 1%
    margin-top 5%
    text-align center
    align-self flex-end
    cursor pointer
    color #ffffff
    padding-left 30px
    padding-right 30px
    border-radius 4px
    background-color #371440
    font-size 1.4vw
    border 0 none

.input-hidden
    display none

.main-blocks
    display flex
    justify-content space-between
    flex-direction column

.add-symb
    color #cccccc
    font-size 70px

.container
    display flex
    flex-direction column
    width 100%
    background-color #000000
    align-items center
    justify-content center

.header-name
    color #ffffff
    font-weight normal !important

.input-name
    color #ffffff
    font-weight normal !important
    margin 5% 0 0

.main-info
    display flex
    flex-direction column
    align-self flex-start

    &__input
        border 0 none
        border-radius 4px
        padding 5px
        background-color #252525
        font-size 1.6vw
        color #fff
        outline none

        &::-moz-placeholder
            color darkgray

        &::-webkit-input-placeholder
            color darkgray

    &__description
        border 0 none
        border-radius 4px
        padding 5px
        background-color #252525
        font-size 1.2vw
        color #fff
        outline none

        &::-moz-placeholder
            color darkgray

        &::-webkit-input-placeholder
            color darkgray

.add-options
    display flex
    flex-direction column
    justify-content space-between

    &__delete-block
        height 100px
        border 1px solid #ffffff
        display flex
        align-items center
        justify-content center

    &__label-load
        background-color #371440
        border-radius 4px
        cursor pointer
        color #ffffff
        font-size 1.1vw
        text-align center
        padding 15px

.form-create
    display flex
    position relative
    padding-top 20px
    flex-direction column
    justify-content space-between
    padding-bottom 20px
    background-color #000
    width 80%

.photo
    display flex
    flex-direction column

#photo
    flex-wrap wrap
    width 409px
    min-height 204px
    display flex
    background-color #252525
    border 1px solid #ffffff
    margin-right 20px

#drop-zone
    width 100px
    height 100px
    border 1px solid black

.wrap-img
    width 100px
    height 100px
    border 1px solid black

.name-photo
    margin 0
    color #ffffff
    font-weight normal !important

.block-hidden
    display none

.dialog
    display flex
    position absolute
    top 10%
    width 80%
    z-index 5
    background-color #454545
    align-self center

.block-shadow
    width 100%
    height 100%
    background-color #000000
    opacity .7
    z-index 5

#map
    width 60%
    height 400px

.photo-dialog__options
    width 40%
    display flex
    flex-direction column
    justify-content space-around
    align-items center
    background-color #454545

#show-photo
    width 100px
    height 100px
    border 1px solid black

.load
    background-color #371440
    border-radius 4px
    cursor pointer
    color #ffffff
    font-size 1.1vw
    text-align center
    padding 15px

#close-dialog
    cursor pointer
    position absolute
    right 0
    top 0

.close-img
    width 40px
    height 40px

#warning
    position absolute
    bottom 0
    color #ff0000

.photo-content
    display flex

.delete-img
    width 50px
    height auto

@media (max-width: 768px)
    .delete-img
        width 30px

    .main-info
        align-self auto
        &__input
            font-size 14px
        &__description
            font-size 14px

    .add-options
        &__label-load
            font-size 14px

    .submit-button
        font-size 14px

    #map
        height 300px

    .close-img
        width 20px
        height 20px

    .load
        font-size 8px
        padding 8px

    #show-photo
        width 50px
        height 50px

@media (max-width: 550px)
    #photo
        width 204px
