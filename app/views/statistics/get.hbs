{{#extend "layout"}}
    {{#content "head"}}
        <title>Статистика</title>
        <link rel="stylesheet" href="//awesomequests.surge.sh/statistics.bundle.css">
    {{/content}}
    {{#content "body"}}
        <table class="statistics-table" border="1">
            <thead>
            <tr>
                <th></th>
                <th>Всего</th>
                <th>Сегодня</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>Визиты</td>
                <td>{{visits}}</td>
                <td>{{visitsToday}}</td>
            </tr>
            <tr>
                <td>Просмотры</td>
                <td>{{reviews}}</td>
                <td>{{reviewsToday}}</td>
            </tr>
            </tbody>
        </table>
    {{/content}}
{{/extend}}
